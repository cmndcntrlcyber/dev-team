# =================================
# Dev Team Platform Configuration
# =================================
# Copy this file to .env and configure your settings

# =================================
# DEPLOYMENT MODE
# =================================
DEPLOYMENT_MODE=simple          # Options: "simple" or "platform"

# =================================
# SIMPLE MODE CONFIGURATION
# =================================
# Used when DEPLOYMENT_MODE=simple
PORT=5000
DATABASE_URL=postgresql://user:password@postgres:5432/devteam
SESSION_SECRET=your-session-secret-min-32-chars

# =================================
# PLATFORM MODE CONFIGURATION
# =================================
# Used when DEPLOYMENT_MODE=platform

# JWT & Authentication
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Infrastructure URLs (auto-configured in Docker)
DATABASE_URL=postgresql://devteam:devteam_secure_password@postgres:5432/dev_team_platform
REDIS_URL=redis://redis:6379
NATS_URL=nats://nats:4222

# API Gateway & Core Services
API_GATEWAY_PORT=3000
ORCHESTRATOR_PORT=3001
PROJECT_SERVICE_PORT=3002
TASK_SERVICE_PORT=3003
AUTH_SERVICE_PORT=3004

# Agent Service Ports
ARCHITECTURE_AGENT_PORT=3010
FRONTEND_AGENT_PORT=3011
BACKEND_AGENT_PORT=3012
QA_AGENT_PORT=3013
DEVOPS_AGENT_PORT=3014
MCP_AGENT_PORT=3015

# Frontend Dashboard
FRONTEND_PORT=3080

# =================================
# AI SERVICES (BOTH MODES)
# =================================
# Anthropic Claude (Required for full functionality)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI (Optional - for additional models)
OPENAI_API_KEY=your-openai-api-key-optional

# Tavily (Optional - for web search capabilities)
TAVILY_API_KEY=your-tavily-api-key-optional

# =================================
# OAUTH INTEGRATIONS (OPTIONAL)
# =================================
# GitHub OAuth (for GitHub integrations)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Google OAuth (for Google services)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# =================================
# EMAIL CONFIGURATION (OPTIONAL)
# =================================
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =================================
# DEVELOPMENT SETTINGS
# =================================
NODE_ENV=development
LOG_LEVEL=info                  # Options: error, warn, info, debug

# CORS Settings (Platform Mode)
CORS_ORIGINS=*                  # Use specific domains in production

# Rate Limiting (Platform Mode)
RATE_LIMIT_WINDOW=60000         # 1 minute in milliseconds
RATE_LIMIT_MAX=100              # Max requests per window

# =================================
# AGENT CONFIGURATION
# =================================
# Agent Timeout Settings
AGENT_TIMEOUT=60000             # 60 seconds
AGENT_MAX_RECONNECT_ATTEMPTS=5
AGENT_RECONNECT_DELAY=5000      # 5 seconds
AGENT_HEALTH_CHECK_INTERVAL=10000 # 10 seconds

# Claude Model Settings
ANTHROPIC_MODEL_ARCHITECTURE=claude-opus-4-1-20250805
ANTHROPIC_MODEL_FRONTEND=claude-sonnet-4-20250514:1M
ANTHROPIC_MODEL_BACKEND=claude-sonnet-4-20250514:1M
ANTHROPIC_MODEL_QA=claude-opus-4-1-20250805
ANTHROPIC_MODEL_DEVOPS=claude-sonnet-4-20250514:1M
ANTHROPIC_MODEL_MCP=claude-sonnet-4-20250514:1M

# =================================
# PRODUCTION OVERRIDES
# =================================
# Uncomment and set these for production deployments

# NODE_ENV=production
# LOG_LEVEL=warn
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# RATE_LIMIT_MAX=50
# DATABASE_URL=postgresql://user:password@your-prod-db:5432/devteam_prod
# REDIS_URL=redis://your-prod-redis:6379

# =================================
# MONITORING (OPTIONAL)
# =================================
# Prometheus monitoring
PROMETHEUS_PORT=9090

# Grafana dashboard
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# =================================
# SECURITY SETTINGS
# =================================
# Base URL for OAuth callbacks
BASE_URL=http://localhost:5000   # Simple mode
# BASE_URL=http://localhost:3000 # Platform mode

# Docker Environment Flag (auto-set in containers)
DOCKER=false

# =================================
# DEVELOPMENT SHORTCUTS
# =================================
# Quick setup commands:
# Simple Mode:  npm run dev:app
# Platform Mode: npm run dev:platform
# Docker Simple: npm run docker:simple
# Docker Platform: npm run docker:platform
