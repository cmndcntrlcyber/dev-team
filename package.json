{
  "name": "dev-team",
  "version": "2.0.0",
  "description": "AI-Powered Multi-Agent Development Platform - Unified Monorepo",
  "private": true,
  "workspaces": [
    "app",
    "services/*",
    "services/agents/*",
    "shared"
  ],
  "scripts": {
    "setup": "npm install && npm run build:shared",
    "build:shared": "npm run build -w shared",
    
    "dev:app": "npm run dev -w app",
    "dev:platform": "docker compose -f docker-compose.microservices.yml up",
    
    "build": "npm run build --workspaces --if-present",
    "test": "npm test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "check": "npm run check --workspaces --if-present",
    
    "docker:simple": "docker compose -f docker-compose.simple.yml up",
    "docker:platform": "docker compose -f docker-compose.microservices.yml up",
    "docker:clean": "docker compose -f docker-compose.simple.yml down -v && docker compose -f docker-compose.microservices.yml down -v",
    
    "db:push": "npm run db:push -w app",
    "db:migrate": "npm run db:migrate -w services/orchestrator-service"
  },
  "keywords": [
    "ai",
    "agents",
    "development",
    "microservices",
    "automation",
    "typescript",
    "react",
    "nodejs"
  ],
  "author": "Dev Team Platform",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cmndcntrlcyber/dev-team.git"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "nodemon": "^3.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  }
}
